<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BatteryActivity">

    <ImageView
        android:id="@+id/battery_icon"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        tools:layout_editor_absoluteY="139dp"
        tools:srcCompat="@drawable/battery_100" />

    <TextView
        android:id="@+id/battery_state_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/battery_icon"
        android:layout_centerHorizontal="true"
        android:text="BATERIA: 100%"
        android:textColor="@color/mdtp_transparent_black"
        android:textSize="40dp" />
</RelativeLayout>