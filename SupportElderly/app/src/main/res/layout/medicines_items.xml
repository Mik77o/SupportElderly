<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgMedicines"
        android:layout_width="341dp"
        android:layout_height="277dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/medicine_icon" />

    <TextView
        android:id="@+id/txtMedicines"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgMedicines"
        android:layout_centerInParent="true"
        android:text="Medicine"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtDose"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMedicines"
        android:layout_centerInParent="true"
        android:text="Dose"
        android:textAlignment="center"
        android:textColor="#e50220"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtFrequency"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDose"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:text="Frequency"
        android:textAlignment="center"
        android:textColor="#0902e5"
        android:textSize="30dp" />
</RelativeLayout>