<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtMedicine"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:ems="20"
        android:hint="Nazwa leku"
        android:inputType="textPersonName"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edtDose"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/edtMedicine"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:hint="Dawka"
        android:inputType="textPersonName"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtDose"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:ems="30"
        android:hint="Częstotliwość stosowania"
        android:inputType="textPersonName"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/edtDose"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="88dp"
        app:srcCompat="@drawable/medicine_icon" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:background="#c8e4d6 "
        android:fontFamily="sans-serif-light"
        android:text="Wybierz zdjęcie leku"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="263dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="#c8e4d6"
        android:fontFamily="sans-serif-light"
        android:text="Zapisz informacje o leku"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnListOfMedicines"
        android:layout_width="264dp"
        android:layout_height="76dp"
        android:layout_below="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="18dp"
        android:background="#c8e4d6 "
        android:fontFamily="sans-serif-light"
        android:text="Wyświetl listę leków"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>